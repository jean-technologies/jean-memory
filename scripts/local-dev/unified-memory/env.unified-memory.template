# Unified Memory System - Environment Configuration Template
# Copy this file to .env.unified-memory and fill in your values

# ========================================
# REQUIRED: API Keys
# ========================================

# OpenAI API Key (required for embeddings and LLM processing)
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# LOCAL DEVELOPMENT FLAGS
# ========================================

# Environment mode (keep as development for local)
ENVIRONMENT=development

# Enable unified memory features
USE_UNIFIED_MEMORY=true

# Confirm this is local unified memory setup
IS_LOCAL_UNIFIED_MEMORY=true

# ========================================
# NEO4J CONFIGURATION
# ========================================

# Neo4j connection for both Mem0 Graph Store and Graphiti
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=fasho93fasho

# Mem0 specific Neo4j configuration (uses same instance)
MEM0_GRAPH_STORE_URL=bolt://localhost:7687
MEM0_GRAPH_STORE_USERNAME=neo4j
MEM0_GRAPH_STORE_PASSWORD=fasho93fasho

# ========================================
# QDRANT CONFIGURATION
# ========================================

# Qdrant vector database for Mem0
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Collection name for unified memory (different from production)
UNIFIED_QDRANT_COLLECTION_NAME=unified_memory_dev

# ========================================
# OPTIONAL: Additional API Keys
# ========================================

# Gemini API Key (optional, for preprocessing)
# GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic API Key (optional, for alternative LLM)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ========================================
# MIGRATION SETTINGS
# ========================================

# Default user ID for local testing
LOCAL_TEST_USER_ID=test_user_unified

# Batch size for migration operations
MIGRATION_BATCH_SIZE=10

# Enable detailed logging
DEBUG_UNIFIED_MEMORY=false

# ========================================
# PRODUCTION SAFETY
# ========================================

# Production API endpoint (for data export only)
# PRODUCTION_API_URL=https://your-production-api.com

# Production API key (for data export only)
# PRODUCTION_API_KEY=your_production_read_only_key 